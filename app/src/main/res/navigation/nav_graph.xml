<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/breakingNewsFragment">
    <fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.example.myapplication.ui.fragments.BreakingNewsFragment"
        android:label="BreakingNewsFragment"
        tools:layout="@layout/fragment_breakingnews">
        <action
            android:id="@+id/action_breakingNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedNewFragment"
        android:name="com.example.myapplication.ui.fragments.SavedNewFragment"
        android:label="fragment_savednew"
        tools:layout="@layout/fragment_savednew">
        <action
            android:id="@+id/action_savedNewFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/serachNewsFragment"
        android:name="com.example.myapplication.ui.fragments.SearchNewsFragment"
        android:label="fragment_serach_news"
        tools:layout="@layout/fragment_serach_news">
        <action
            android:id="@+id/action_serachNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.myapplication.ui.fragments.ArticleFragment"
        android:label="ArticleFragment">
        <argument
            android:name="article"
            app:argType="com.example.myapplication.domain.model.Article" />
    </fragment>
</navigation>